<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/app_name"
            app:titleTextColor="@android:color/white" />

    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/base_margin_left"
        android:layout_marginLeft="@dimen/base_margin_left"
        android:layout_marginTop="@dimen/base_margin_top"
        android:layout_marginEnd="@dimen/base_margin_right"
        android:layout_marginRight="@dimen/base_margin_right">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/etMain"
            android:layout_width="match_parent"
            android:inputType="numberDecimal"
            android:layout_height="@dimen/base_input_height"
            android:hint="@string/main_input" />

    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/spnMainInput"
        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_input_height"
        android:layout_marginStart="@dimen/base_margin_left"
        android:layout_marginLeft="@dimen/base_margin_left"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/base_margin_right"
        android:layout_marginRight="@dimen/base_margin_right" />

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/spnMainOutput"
        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_input_height"
        android:layout_marginStart="@dimen/base_margin_left"
        android:layout_marginLeft="@dimen/base_margin_left"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/base_margin_right"
        android:layout_marginRight="@dimen/base_margin_right" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btnMain"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/base_margin_left"
        android:layout_marginLeft="@dimen/base_margin_left"
        android:layout_marginEnd="@dimen/base_margin_right"
        android:layout_marginRight="@dimen/base_margin_right"
        android:layout_marginBottom="@dimen/base_margin_bottom"
        android:enabled="false"
        android:text="@string/main_convert" />

</LinearLayout>